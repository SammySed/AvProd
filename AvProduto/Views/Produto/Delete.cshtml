@model AvProduto.Models.Produto

@{
    ViewData["Title"] = "Delete";
    ViewData["Message"] = "$ Quer mesmo deletar o @Produto.Nome";
}

<h1>Deletar</h1>
<h3>Voce tem certeza que quer apagar isso?</h3>
<hr />
<div class="row">
    
    
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" readonly />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Modelo" class="control-label"></label>
            <input asp-for="Modelo" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="categoria" class="control-label"></label>
            <input asp-for="categoria" class="form-control" readonly />
        </div>
         
           
      

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProdutoId" />
            <input type="submit" value="Apagar" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModal" /> |
            <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>